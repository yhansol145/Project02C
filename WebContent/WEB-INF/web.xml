<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>Project02C</display-name>
  
  <context-param>
  	<param-name>MariaJDBCDriver</param-name>
  	<param-value>org.mariadb.jdbc.Driver</param-value>
  </context-param>
  <context-param>
  	<param-name>MariaConnectURL</param-name>
  	<param-value>jdbc:mariadb://127.0.0.1:3306/suamil_db</param-value>
  </context-param>
  <context-param>
  	<param-name>MariaUser</param-name>
  	<param-value>suamil_user</param-value>
  </context-param>
  <context-param>
  	<param-name>MariaPass</param-name>
  	<param-value>1234</param-value>
  </context-param>
  
  <filter>
  	<filter-name>SetCharEncoding</filter-name>
  	<filter-class>org.apache.catalina.filters.SetCharacterEncodingFilter</filter-class>
  	<init-param>
  		<param-name>encoding</param-name>
  		<param-value>utf-8</param-value>
  	</init-param>
  </filter>
  
  <filter-mapping>
  	<filter-name>SetCharEncoding</filter-name>
  	<url-pattern>/*</url-pattern>
  </filter-mapping>

    <servlet>
    	<servlet-name>MVCBoardList</servlet-name>
    	<servlet-class>model2.mvcboard.ListController</servlet-class>
    </servlet>
    
    <servlet-mapping>
    	<servlet-name>MVCBoardList</servlet-name>
    	<url-pattern>/mvcboard/list.do</url-pattern>
    </servlet-mapping>
    
    <servlet>
    	<servlet-name>MVCBoardWrite</servlet-name>
    	<servlet-class>model2.mvcboard.WriteController</servlet-class>
    </servlet>
    
    <servlet-mapping>
    	<servlet-name>MVCBoardWrite</servlet-name>
    	<url-pattern>/mvcboard/write.do</url-pattern>
    </servlet-mapping>
    <context-param>
    	<param-name>maxPostSize</param-name>
    	<param-value>1024000</param-value>
    </context-param>
  
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
</web-app>